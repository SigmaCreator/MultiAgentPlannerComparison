package floods;

import cartago.*;

public class VehicleUav extends Artifact {
	
	void init(String area) {
		defineObsProperty("at",area);
	}
	
	@OPERATION void navigate(String from, String to, String area) throws InterruptedException {
		ObsProperty cond1 = getObsProperty("at");
		if (cond1.toString().contains(area)) {
			Thread.sleep(10);
			getObsProperty("at").updateValue(to);			
		} else {
		failed("Action navigate has failed.");
    }
	}
	
	@OPERATION void take_picture(String flood) throws InterruptedException {
//		ObsProperty cond1 = getObsProperty("at");
//		if ( visible_from.contains(cond1.toString()) )
//		{
			Thread.sleep(10);
			defineObsProperty("have_picture", flood);
//		} else {
//			failed("Action take_picture has failed.");
//	    }
	}
	
	@OPERATION void communicate_data(String flood) throws InterruptedException {
		Thread.sleep(10);
		defineObsProperty("communicated_data", flood);
		removeObsPropertyByTemplate("have_picture", flood);
	}	
	
}

