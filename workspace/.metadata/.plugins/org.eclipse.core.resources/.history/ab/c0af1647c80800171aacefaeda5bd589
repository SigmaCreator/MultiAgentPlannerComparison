+!navigate(To)
	: at(From)
<-
	!navigate(_,From,To);
	.

+!navigate(_,From,To)
	: at(From) & .my_name(Name) & focused(_,Name,Id)
<-
	navigate(To)[artifact_id(Id)];
	.
	
+!take_picture(_,Area,Flood)
	: focused(_,Flood,Id1) & visible_from(Area2)[artifact_id(Id1)] & .substring(Area,Area2) & .my_name(Name) & focused(_,Name,Id2)
<-
	take_picture(Flood)[artifact_id(Id2)];
	.
	
+!communicate_data
	: focused(_,Flood,Id1) & visible_from(Area2)[artifact_id(Id1)] & .substring(Area,Area2) & .my_name(Name) & focused(_,Name,Id2)
<-
	take_picture(Flood)[artifact_id(Id2)];
	.
	
